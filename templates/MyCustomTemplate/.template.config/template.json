{
	"$schema": "http://json.schemastore.org/template",
	"author": "Carlos W. Mercado",
	"classifications": [
		"Solution",
		"Clean Architect Variant",
		"API",
		"Web"
	],
	"identity": "CWM.Custom.Template",
	"name": "Basic Solution Template",
	"shortName": "basic-sol-template",
	"sourceName": "MyCustomTemplate",
	"tags": {
		"language": "C#",
		"type": "solution",
		"platform": "net8.0"
	},
	"preferNameDirectory": true,
	"description": "A basic solution template with a clean architecture variant.",
	"symbols": {
		"Framework": {
			"type": "parameter",
			"datatype": "choice",
			"replaces": "{{TargetFramework}}",
			"defaultValue": "net8.0",
			"choices": [
				{
					"displayName": ".NET 10.0",
					"choice": "net10.0"
				},
				{
					"displayName": ".NET 9.0",
					"choice": "net9.0"
				},
				{
					"displayName": ".NET 8.0",
					"choice": "net8.0"
				},
				{
					"displayName": ".NET 7.0",
					"choice": "net7.0"
				},
				{
					"displayName": ".NET 6.0",
					"choice": "net6.0"
				}
			],
			"description": "The target framework for the projects."
		},
		"SwaggerSupportEnabling": {
			"type": "parameter",
			"description": "Include Swagger support in the API project.",
			"datatype": "bool",
			"defaultValue": "true"
		},
		"IncludeReadmeFile": {
			"type": "parameter",
			"description": "Include the README.md file in the generated project.",
			"datatype": "bool",
			"defaultValue": "true"
		}
	},
	"sources": [
		{
			"modifiers": [
				{
					"type": "condition",
					"condition": "(IncludeReadmeFile)",
					"include": [
						"MyCustomTemplate/README.md"
					]
				}
			]
		}
	]
}
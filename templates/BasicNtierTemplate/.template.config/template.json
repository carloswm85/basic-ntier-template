{
	"$schema": "http://json.schemastore.org/template",
	"author": "Carlos W. Mercado",
	"classifications": [
		"Solution",
		"Clean Architect Variant",
		"Ntier",
		"API",
		"Web"
	],
	"identity": "Basic.Ntier.Template.CSharp",
	"groupIdentity": "Basic.Ntier.Template",
	"name": "Basic N-Tier Template (C#)",
	"shortName": "basic-ntier-template",
	"sourceName": "BasicNtierTemplate",
	"tags": {
		"language": "C#",
		"type": "solution",
		"platform": "net8.0"
	},
	"preferNameDirectory": true,
	"description": "A basic solution template with a clean architecture variant.",
	"symbols": {
		"Framework": {
			"type": "parameter",
			"datatype": "choice",
			"replaces": "{{TargetFramework}}",
			"defaultValue": "net8.0",
			"choices": [
				{
					"displayName": ".NET 10.0 (LTS, Preview)",
					"choice": "net10.0"
				},
				{
					"displayName": ".NET 9.0 (STS)",
					"choice": "net9.0"
				},
				{
					"displayName": ".NET 8.0 (LTS, Current default)",
					"choice": "net8.0"
				},
				{
					"displayName": ".NET 7.0",
					"choice": "net7.0"
				},
				{
					"displayName": ".NET 6.0",
					"choice": "net6.0"
				}
			],
			"description": "The target framework for the projects."
		},
		"IncludeDocs": {
			"type": "parameter",
			"description": "Include explanatory documentation",
			"datatype": "bool",
			"defaultValue": "true"
		}
	},
	"sources": [
		{
			"source": "./",
			"target": "./",
			"modifiers": [
				{
					"type": "condition",
					"condition": "(IncludeDocs)",
					"include": [
						"BasicNtierTemplate/docs/**/*"
					]
				}
			]
		}
	],
	"primaryOutputs": [
		{ "path": "BasicNtierTemplate.API/BasicNtierTemplate.API.csproj" },
		{ "path": "BasicNtierTemplate.Service/BasicNtierTemplate.Service.csproj" },
		{ "path": "BasicNtierTemplate.Repository/BasicNtierTemplate.Repository.csproj" },
		{ "path": "BasicNtierTemplate.Data/BasicNtierTemplate.Data.csproj" }
	],
	"postActions": [
		{
			"actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
			"manualInstructions": [
				{
					"text": "Run 'dotnet restore'"
				}
			],
			"continueOnError": true,
			"description": "Restore NuGet packages"
		}
	]
}
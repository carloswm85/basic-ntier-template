@using BasicNtierTemplate.Service.Dtos

@model PaginatedList<BasicNtierTemplate.Data.Model.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-5">

    <!-- Header Row -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>

        <a asp-controller="student" asp-action="create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Create New
        </a>
    </div>

    <hr />

    <div class="d-flex justify-content-between">
        <!-- Page Size Dropdown -->
        <div class="mb-4">
            <label for="PageSize" class="form-label fw-semibold">Page Size:</label>

            <select id="PageSize"
                    class="form-select d-inline-block w-auto"
                    onchange="location = this.value;">

                @{
                    int[] sizes = new[] { 5, 10, 25, 50, 100 };
                }

                @foreach (var size in sizes)
                {
                    string? url = @Url.Action("Index", new
                    {
                        pageIndex = 1,
                        currentFilter = ViewData["CurrentFilter"],
                        searchString = ViewData["CurrentFilter"],
                        sortOrder = ViewData["CurrentSort"],
                        pageSize = size,
                    });

                    if (ViewData["PageSize"]?.ToString() == size.ToString())
                    {
                        <option selected value="@url"> @size </option>
                    }
                    else
                    {
                        <option value="@url"> @size </option>
                    }
                }
            </select>
        </div>

        <!-- Search Form -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-2 align-items-end">
                <div class="col-auto">
                    <div class="input-group">
                        <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                        <input type="hidden" name="pageIndex" value="1" /> <!-- reset to page 1 on search -->
                        <input type="hidden" name="pageSize" value="@ViewData["PageSize"]" />
                        <input type="text"
                               id="SearchString"
                               name="SearchString"
                               value="@ViewData["CurrentFilter"]"
                               class="form-control @(string.IsNullOrEmpty(Convert.ToString(ViewData["CurrentFilter"])) ? "rounded-1" : "rounded-start-2")"
                               placeholder="Enter name..." />

                        @if (!string.IsNullOrEmpty(Convert.ToString(ViewData["CurrentFilter"])))
                        {
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageIndex="@(Model.PageIndex)"
                               asp-route-currentFilter=""
                               asp-route-pageSize="@ViewData["PageSize"]"
                                class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }
                    </div>
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                </div>

                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-secondary">
                        Reset Default
                    </a>
                </div>

            </div>
        </form>
    </div>

    <!-- No Data Warning -->
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            There is no data to display.
        </div>
    }
    else
    {
        <!-- Table Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">

                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-action="Index"
                                    asp-route-sortOrder="@ViewData["NameSortParm"]"
                                    asp-route-pageIndex="@(Model.PageIndex)"
                                    asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]"
                                    asp-route-pageSize="@ViewData["PageSize"]">
                                        @Html.DisplayNameFor(model => model[0].LastName)
                                    </a>
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model[0].FirstMidName)
                                </th>

                                <th>
                                    <a asp-action="Index"
                                    asp-route-sortOrder="@ViewData["DateSortParm"]"
                                    asp-route-pageIndex="@(Model.PageIndex)"
                                    asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]"
                                    asp-route-pageSize="@ViewData["PageSize"]">
                                        @Html.DisplayNameFor(model => model[0].EnrollmentDate)
                                    </a>
                                </th>

                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.LastName</td>
                                    <td>@item.FirstMidName</td>
                                    <td>@item.EnrollmentDate.ToShortDateString()</td>

                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-between align-items-center mt-3">
            <!-- Pagination -->
            <nav>
                <ul class="pagination mb-0">

                    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageIndex="1"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-pageSize="@ViewData["PageSize"]">
                            First
                        </a>
                    </li>

                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageIndex="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-pageSize="@ViewData["PageSize"]">
                            Previous
                        </a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link">
                            Page @Model.PageIndex of @Model.TotalPages
                        </span>
                    </li>

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageIndex="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-pageSize="@ViewData["PageSize"]">
                            Next
                        </a>
                    </li>

                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageIndex="@Model.TotalPages"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-pageSize="@ViewData["PageSize"]">
                            Last
                        </a>
                    </li>

                </ul>
            </nav>

            <!-- Totals -->
            <div class="ms-3 text-muted">
                <i class="bi bi-bar-chart-fill me-1"></i>
                <b>@Model.TotalRecords</b> record(s) total, <b>@Model.FilteredCount</b> filtered, <b>@Model.Count</b> visible
            </div>

        </div>

    }
</div>

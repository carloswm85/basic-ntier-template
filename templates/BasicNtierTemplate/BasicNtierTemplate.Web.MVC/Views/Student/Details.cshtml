@model BasicNtierTemplate.Service.Dtos.StudentDto

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-fill me-2"></i> Student Details
            </h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-secondary">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstMidName)
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    @Html.DisplayNameFor(model => model.GovernmentIdFormatted)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.GovernmentIdFormatted)
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </dd>
            </dl>

            <hr />

            <h5 class="mt-4 mb-3">
                <i class="bi bi-book-fill me-2"></i> Enrollments
            </h5>

            @if (Model.Enrollments == null || Model.Enrollments.Count <= 0)
            {
                <div class="alert alert-info" role="alert">
                    <ul class="m-0">
                        <li>No enrollments to display.</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Course Title</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Enrollments)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="card-footer text-end">
            <a asp-controller="student" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-controller="student" asp-action="list" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

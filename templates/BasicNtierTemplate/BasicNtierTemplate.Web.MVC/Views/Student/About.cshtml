@model IEnumerable<BasicNtierTemplate.Service.Dtos.Contoso.EnrollmentDateGroupDto>

@{
    ViewData["Title"] = "Student Body Statistics";
}

<h2 class="mb-4">Student Body Statistics</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nº</th>
                <th>Enrollment Year</th>
                <th>Students</th>
            </tr>
        </thead>
        <tbody>
            @{
                int row = 0; 
            }
            @foreach (var item in Model)
            {
                row++;
                <tr>
                    <td>@row</td>
                    <td>@Html.DisplayFor(modelItem => item.EnrollmentYear)</td>
                    <td>@item.StudentCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>

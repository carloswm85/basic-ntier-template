@using BasicNtierTemplate.Web.MVC.Models.ViewModels.Authorization
@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

@section Styles {
    <style>
        ul {
            margin: 0;
        }
    </style>
}

@if (Model.ExternalLogins != null)
{
    @for (int i = 0; i < Model.ExternalLogins.Count; i++)
    {
        <input type="hidden" asp-for="ExternalLogins[i]" />
    }
}

<div class="container py-5">
    <div class="row g-4">

        <!-- LOCAL LOGIN -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center py-3">
                    <h4 class="fw-semibold mb-0">Sign In</h4>
                    <small class="text-muted">Access your account</small>
                </div>

                <div class="card-body p-4">
                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger py-2 d-none" id="validationSummary"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="emailInput" autocomplete="email" placeholder=" " />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" id="passwordInput" autocomplete="current-password" placeholder=" " />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" id="rememberInput" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>

                        <div class="text-center small">
                            <a asp-action="ForgotPassword" class="link-primary">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- QUICK ACCOUNTS -->
            <div class="card shadow-sm mt-4">
                <div class="card-header py-2">
                    <strong>Quick Test Accounts</strong> <span class="text-muted">(password: <code>!Abc123</code>)</span>
                </div>
                <div class="list-group list-group-flush small">
                    <button type="button" class="list-group-item list-group-item-action" onclick="insertUserAndPassword('admin')">
                        Admin1@BasicNtierTemplate.com — <strong>Admin</strong>
                    </button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="insertUserAndPassword('superAdmin')">
                        SuperAdmin1@BasicNtierTemplate.com — <strong>Super Admin</strong>
                    </button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="insertUserAndPassword('test')">
                        Test1@BasicNtierTemplate.com — <strong>Test User</strong>
                    </button>
                </div>
            </div>
        </div>

        <!-- EXTERNAL LOGIN -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center py-3">
                    <h4 class="fw-semibold mb-0">External Login</h4>
                </div>

                <div class="card-body p-4 text-center">
                    @if (Model.ExternalLogins == null || Model.ExternalLogins.Count == 0)
                    {
                        <div class="text-muted">No external login providers available.</div>
                    }
                    else
                    {
                        <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        class="btn btn-outline-secondary w-100 mb-2"
                                        name="provider" value="@provider.Name">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>

            <div class="alert alert-warning mt-4 small">
                <ul>
                    <li>External login may fail behind proxy servers.</li>
                    <li><a asp-controller="Error" asp-action="ProxyServerError">See troubleshooting info</a></li>
                </ul>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const v = document.getElementById("validationSummary");
            if (v.innerText.trim().length > 0) v.classList.remove("d-none");
        });

        function insertUserAndPassword(selection) {
            const accounts = {
                admin: "Admin1@BasicNtierTemplate.com",
                superAdmin: "SuperAdmin1@BasicNtierTemplate.com",
                test: "Test1@BasicNtierTemplate.com"
            };

            document.getElementById('emailInput').value = accounts[selection] ?? "";
            document.getElementById('passwordInput').value = '!Abc123';
            document.getElementById('rememberInput').checked = true;
        }
    </script>
}

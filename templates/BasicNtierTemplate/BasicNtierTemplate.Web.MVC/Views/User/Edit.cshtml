@model BasicNtierTemplate.Web.MVC.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i>Edit User
                </h2>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i>Cancel
                </a>
            </div>

            <hr />

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Basic Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label fw-semibold">
                                    Username <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="IsActive" class="form-check-label fw-semibold">
                                        Account Active
                                    </label>
                                </div>
                                <small class="text-muted">Deactivating the account will prevent the user from logging in</small>
                            </div>

                            <hr />

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-semibold">
                                    First Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-semibold">
                                    Last Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-semibold">
                                    City <span class="text-danger">*</span>
                                </label>
                                <input asp-for="City" class="form-control" placeholder="Enter city name" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-envelope me-2"></i>Contact Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email Status</label>
                                <div class="form-check form-switch">
                                    <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="EmailConfirmed" class="form-check-label">
                                        Email Confirmed
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="+1 (555) 123-4567" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Phone Status</label>
                                <div class="form-check form-switch">
                                    <input asp-for="PhoneNumberConfirmed" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="PhoneNumberConfirmed" class="form-check-label">
                                        Phone Confirmed
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-lock me-2"></i>Security Settings
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="TwoFactorEnabled" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="TwoFactorEnabled" class="form-check-label fw-semibold">
                                        Two-Factor Authentication
                                    </label>
                                </div>
                                <small class="text-muted">Require additional verification during login</small>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="LockoutEnabled" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="LockoutEnabled" class="form-check-label fw-semibold">
                                        Lockout Enabled
                                    </label>
                                </div>
                                <small class="text-muted">Allow account lockout after failed login attempts</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LockoutEnd" class="form-label fw-semibold">Lockout End Date</label>
                                <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                                <small class="text-muted">Leave empty to unlock immediately</small>
                                <span asp-validation-for="LockoutEnd" class="text-danger small d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AccessFailedCount" class="form-label fw-semibold">Failed Login Attempts</label>
                                <input asp-for="AccessFailedCount" class="form-control" type="number" min="0" />
                                <small class="text-muted">Number of failed login attempts</small>
                                <span asp-validation-for="AccessFailedCount" class="text-danger small d-block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-people me-2"></i>Roles & Claims
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-3" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> Roles and claims are typically managed through separate actions. Use the dedicated role and claim management pages to modify user permissions.
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Current Roles</label>
                                @if (Model.Roles != null && Model.Roles.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2 p-3 border rounded bg-light">
                                        @foreach (var role in Model.Roles)
                                        {
                                            <span class="badge bg-info text-dark">
                                                <i class="bi bi-person-badge me-1"></i>@role
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic mb-0">No roles assigned</p>
                                }
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Current Claims</label>
                                @if (Model.Claims != null && Model.Claims.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2 p-3 border rounded bg-light">
                                        @foreach (var claim in Model.Claims)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-key-fill me-1"></i>@claim
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic mb-0">No claims assigned</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <small>
                                    <i class="bi bi-info-circle me-1"></i>
                                    Fields marked with <span class="text-danger">*</span> are required
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="bi bi-x-lg me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-1"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

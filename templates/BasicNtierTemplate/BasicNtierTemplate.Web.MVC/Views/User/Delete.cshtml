@model BasicNtierTemplate.Web.MVC.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="alert alert-danger border-danger shadow-sm" role="alert">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                    <div>
                        <h4 class="alert-heading mb-1">Confirm Delete User</h4>
                        <p class="mb-0">Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-x me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">User ID</h6>
                                <p class="mb-0">
                                    <code class="text-dark">@Model.Id</code>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">Username</h6>
                                <p class="mb-0 fw-semibold">@Model.UserName</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">Full Name</h6>
                                <p class="mb-0 fw-semibold">@Model.FullName</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">Status</h6>
                                <p class="mb-0">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">Email</h6>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <span>@Model.Email</span>
                                        @if (Model.EmailConfirmed)
                                        {
                                            <i class="bi bi-check-circle-fill text-success ms-1" title="Verified"></i>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Not provided</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">Phone Number</h6>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <span>@Model.PhoneNumber</span>
                                        @if (Model.PhoneNumberConfirmed)
                                        {
                                            <i class="bi bi-check-circle-fill text-success ms-1" title="Verified"></i>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Not provided</span>
                                    }
                                </p>
                            </div>
                        </div>

                        @if (Model.Roles != null && Model.Roles.Any())
                        {
                            <div class="col-12">
                                <div class="border-start border-danger border-4 ps-3">
                                    <h6 class="text-muted mb-2">Assigned Roles</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var role in Model.Roles)
                                        {
                                            <span class="badge bg-info text-dark">
                                                <i class="bi bi-person-badge me-1"></i>@role
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.Claims != null && Model.Claims.Any())
                        {
                            <div class="col-12">
                                <div class="border-start border-danger border-4 ps-3">
                                    <h6 class="text-muted mb-2">Assigned Claims</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var claim in Model.Claims)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-key-fill me-1"></i>@claim
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-warning mb-3">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-info-circle-fill text-warning fs-4 me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-2">What happens when you delete this user?</h6>
                            <ul class="mb-0 small">
                                <li>The user account will be permanently removed from the system</li>
                                <li>All associated roles and claims will be removed</li>
                                <li>The user will no longer be able to log in</li>
                                <li>This action cannot be reversed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="List" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>No, Keep User
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-2"></i>Yes, Delete User
                            </button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Details" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i>See user details
                </a>
            </div>
        </div>
    </div>
</div>
@model BasicNtierTemplate.Web.MVC.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i>User Details
                </h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-1"></i>Edit
                    </a>
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>

            <hr />

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Model.FullName</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Basic Information -->
                        <div class="col-md-6">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-info-circle me-2"></i>Basic Information
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">User ID:</dt>
                                    <dd class="col-sm-7">
                                        <code class="text-muted">@Model.Id</code>
                                    </dd>

                                    <dt class="col-sm-5">Username:</dt>
                                    <dd class="col-sm-7">@Model.UserName</dd>

                                    <dt class="col-sm-5">Full Name:</dt>
                                    <dd class="col-sm-7">@Model.FullName</dd>

                                    <dt class="col-sm-5">Status:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="col-md-6">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-envelope me-2"></i>Contact Information
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Email:</dt>
                                    <dd class="col-sm-7">
                                        @if (!string.IsNullOrEmpty(Model.Email))
                                        {
                                            <span>@Model.Email</span>
                                            @if (Model.EmailConfirmed)
                                            {
                                                <i class="bi bi-check-circle-fill text-success ms-1" title="Verified"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-circle-fill text-warning ms-1" title="Not Verified"></i>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Not provided</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Phone Number:</dt>
                                    <dd class="col-sm-7">
                                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                        {
                                            <span>@Model.PhoneNumber</span>
                                            @if (Model.PhoneNumberConfirmed)
                                            {
                                                <i class="bi bi-check-circle-fill text-success ms-1" title="Verified"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-circle-fill text-warning ms-1" title="Not Verified"></i>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Not provided</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Security Settings -->
                        <div class="col-md-6">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-shield-lock me-2"></i>Security Settings
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-6">Two-Factor Auth:</dt>
                                    <dd class="col-sm-6">
                                        @if (Model.TwoFactorEnabled)
                                        {
                                            <span class="badge bg-success">Enabled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Disabled</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-6">Lockout Enabled:</dt>
                                    <dd class="col-sm-6">
                                        @if (Model.LockoutEnabled)
                                        {
                                            <span class="badge bg-warning text-dark">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-6">Lockout End:</dt>
                                    <dd class="col-sm-6">
                                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                        {
                                            <span class="text-danger">
                                                @Model.LockoutEnd.Value.LocalDateTime.ToString("g")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not locked out</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-6">Failed Attempts:</dt>
                                    <dd class="col-sm-6">
                                        @if (Model.AccessFailedCount > 0)
                                        {
                                            <span class="badge bg-danger">@Model.AccessFailedCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">0</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Roles -->
                        <div class="col-md-6">
                            <div class="border rounded p-3 h-100">
                                <h6 class="text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-people me-2"></i>Roles
                                </h6>
                                @if (Model.Roles != null && Model.Roles.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var role in Model.Roles)
                                        {
                                            <span class="badge bg-info text-dark">
                                                <i class="bi bi-person-badge me-1"></i>@role
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic mb-0">No roles assigned</p>
                                }
                            </div>
                        </div>

                        <!-- Claims -->
                        <div class="col-12">
                            <div class="border rounded p-3">
                                <h6 class="text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-key me-2"></i>Claims
                                </h6>
                                @if (Model.Claims != null && Model.Claims.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var claim in Model.Claims)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-key-fill me-1"></i>@claim
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic mb-0">No claims assigned</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                    <small>
                        <i class="bi bi-calendar me-1"></i>Last updated: @DateTime.Now.ToString("g")
                    </small>
                    <div>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            <i class="bi bi-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using BasicNtierTemplate.Web.MVC.Models

@model PaginatedListViewModel<BasicNtierTemplate.Service.Dtos.ApplicationUserDto>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">

    <!-- Header Row -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>

        <a asp-controller="user" asp-action="create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Create New
        </a>
    </div>

    <hr />

    <div class="d-flex justify-content-between">
        <!-- Page Size Dropdown -->
        <div class="mb-4">
            <label for="PageSize" class="form-label fw-semibold">Page Size:</label>

            <select id="PageSize"
                    class="form-select d-inline-block w-auto"
                    onchange="location = this.value;">

                @{
                    int[] sizes = new[] { 5, 10, 25, 50, 100 };
                }

                @foreach (var size in sizes)
                {
                    string? url = @Url.Action("List", new
                    {
                        currentFilter = Model.CurrentFilter,
                        pageIndex = 1,
                        pageSize = size,
                        searchString = Model.CurrentFilter,
                        sortOrder = Model.CurrentSort,
                    });

                    if (Model.PageSize == size)
                    {
                        <option selected value="@url"> @size </option>
                    }
                    else
                    {
                        <option value="@url"> @size </option>
                    }
                }
            </select>
        </div>

        <!-- Search Form -->
        <form asp-action="List" method="get" class="mb-4">
            <div class="row g-2 align-items-end">
                <div class="col-auto">
                    <div class="input-group">
                        <input type="hidden" name="sortOrder" value="@Model.CurrentSort" />
                        <input type="hidden" name="pageIndex" value="1" /> <!-- reset to page 1 on search -->
                        <input type="hidden" name="pageSize" value="@Model.PageSize" />
                        <input type="text"
                               id="SearchString"
                               name="SearchString"
                               value="@Model.CurrentFilter"
                               class="form-control
                                    @(string.IsNullOrEmpty(Convert.ToString(Model.CurrentFilter))
                                                                       ? "rounded-1" : "rounded-start-2")"
                               placeholder="Enter name..." />

                        @if (!string.IsNullOrEmpty(Convert.ToString(Model.CurrentFilter)))
                        {
                            <a asp-action="List"
                               asp-route-sortOrder="@Model.CurrentSort"
                               asp-route-pageIndex="@(Model.PaginatedList.PageIndex)"
                               asp-route-currentFilter=""
                               asp-route-pageSize="@Model.PageSize"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }
                    </div>
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                </div>

                <div class="col-auto">
                    <a asp-action="List" class="btn btn-secondary">
                        Reset Default
                    </a>
                </div>

            </div>
        </form>
    </div>

    <!-- No Data Warning -->
    @if (!Model.PaginatedList.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            There is no data to display.
        </div>
    }
    else
    {
        <!-- Table Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">

                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-action="List"
                                       asp-route-sortOrder="@Model.SortParamOne"
                                       asp-route-pageIndex="@(Model.PaginatedList.PageIndex)"
                                       asp-route-currentFilter="@Model.CurrentFilter"
                                       asp-route-searchString="@Model.CurrentFilter"
                                       asp-route-pageSize="@Model.PageSize">
                                        @Html.DisplayNameFor(model => model.PaginatedList[0].LastName)
                                    </a>
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.PaginatedList[0].FirstName)
                                </th>

                                <th>
                                    <a asp-action="List"
                                       asp-route-sortOrder="@Model.SortParamTwo"
                                       asp-route-pageIndex="@(Model.PaginatedList.PageIndex)"
                                       asp-route-currentFilter="@Model.CurrentFilter"
                                       asp-route-searchString="@Model.CurrentFilter"
                                       asp-route-pageSize="@Model.PageSize">
                                        @Html.DisplayNameFor(model => model.PaginatedList[0].UserName)
                                    </a>
                                </th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.PaginatedList)
                            {
                                <tr>
                                    <td>@item.LastName</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.UserName</td>
                                    
                                    <td class="text-end">
                                        <a asp-action="Placeholder" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-action="Placeholder" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        <a asp-action="Placeholder" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-between align-items-center mt-3">
            <!-- Pagination -->
            <nav>
                <ul class="pagination mb-0">

                    <li class="page-item @(Model.PaginatedList.PageIndex == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="List"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-pageIndex="1"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-searchString="@Model.CurrentFilter"
                           asp-route-pageSize="@Model.PageSize">
                            First
                        </a>
                    </li>

                    <li class="page-item @(Model.PaginatedList.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="List"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-pageIndex="@(Model.PaginatedList.PageIndex - 1)"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-searchString="@Model.CurrentFilter"
                           asp-route-pageSize="@Model.PageSize">
                            Previous
                        </a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link">
                            Page @Model.PaginatedList.PageIndex of @Model.PaginatedList.TotalPages
                        </span>
                    </li>

                    <li class="page-item @(Model.PaginatedList.HasNextPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="List"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-pageIndex="@(Model.PaginatedList.PageIndex + 1)"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-searchString="@Model.CurrentFilter"
                           asp-route-pageSize="@Model.PageSize">
                            Next
                        </a>
                    </li>

                    <li class="page-item
                            @(Model.PaginatedList.PageIndex == Model.PaginatedList.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="List"
                           asp-route-sortOrder="@Model.CurrentSort"
                           asp-route-pageIndex="@Model.PaginatedList.TotalPages"
                           asp-route-currentFilter="@Model.CurrentFilter"
                           asp-route-searchString="@Model.CurrentFilter"
                           asp-route-pageSize="@Model.PageSize">
                            Last
                        </a>
                    </li>

                </ul>
            </nav>

            <!-- Totals -->
            <div class="ms-3 text-muted">
                <i class="bi bi-bar-chart-fill me-1"></i>
                <b>@Model.PaginatedList.TotalRecords</b> record(s) total,
                <b>@Model.PaginatedList.FilteredCount</b> filtered,
                <b>@Model.PaginatedList.Count</b> visible
            </div>

        </div>

    }
</div>

@model IEnumerable<BasicNtierTemplate.Service.Dtos.ApplicationUserDto>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle table-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">User Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Confirmed</th>
                <th scope="col">Active</th>
                <th scope="col">Phone Confirmed</th>
                <th scope="col">2FA</th>
                <th scope="col">Lockout End</th>
                <th scope="col">Lockout</th>
                <th scope="col">Failed Logins</th>
                <th scope="col">Actions</th>
                <th scope="col">Enabled Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <span class="badge @(user.EmailConfirmed ? "bg-success" : "bg-secondary")">
                            @(user.EmailConfirmed ? "Yes" : "No")
                        </span>
                    </td>
                    <td>
                        <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                            @(user.IsActive ? "Yes" : "No")
                        </span>
                    </td>
                    <td>
                        <span class="badge @(user.PhoneNumberConfirmed ? "bg-success" : "bg-secondary")">
                            @(user.PhoneNumberConfirmed ? "Yes" : "No")
                        </span>
                    </td>
                    <td>
                        <span class="badge @(user.TwoFactorEnabled ? "bg-primary" : "bg-secondary")">
                            @(user.TwoFactorEnabled ? "Yes" : "No")
                        </span>
                    </td>
                    <td>@(user.LockoutEnd?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>
                        <span class="badge @(user.LockoutEnabled ? "bg-warning text-dark" : "bg-secondary")">
                            @(user.LockoutEnabled ? "Yes" : "No")
                        </span>
                    </td>
                    <td>@user.AccessFailedCount</td>
                    <td>
                        <div class="btn-group btn-group-sm w-100" role="group">
                            <a asp-action="Details" asp-route-username="@user.UserName"
                               class="" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-username="@user.UserName"
                               class="" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                    <td>
                        <form asp-action="ToggleActive" asp-route-username="@user.UserName"
                              method="post" class="d-inline m-0">
                            <button type="submit"
                                    class="btn @(user.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                    title="@(user.IsActive ? "Disable" : "Enable")">
                                <i class="fas @(user.IsActive ? "fa-ban" : "fa-check-circle")"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
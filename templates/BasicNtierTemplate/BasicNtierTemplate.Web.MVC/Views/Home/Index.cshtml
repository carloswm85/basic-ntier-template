@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">

    <header class="text-center mb-5">
        <h1 class="display-4 fw-bold">BasicNtierTemplate Project</h1>
        <p class="text-muted fs-5">
            A clean, layered project starter to accelerate .NET application development
        </p>
    </header>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="h5 fw-semibold">Welcome to the BasicNtierTemplate Project</h3>
                    <p>
                        This project was generated using a <i>.NET template</i>, and includes
                        a starting data model based on the <b>“Contoso University” tutorial</b>.
                        This starting point demonstrates recommended usage patterns
                        for Entity Framework Core within a layered architecture.
                    </p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary" href="https://learn.microsoft.com/en-us/aspnet/core/data/ef-mvc/intro?view=aspnetcore-8.0" target="_blank">
                            See “Contoso University” tutorial &raquo;
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h3 class="h5 fw-semibold">Official Public GitHub Repository</h3>
                    <p>You may freely use and modify for your own purposes the template under the MIT license.</p>
                    <p>Template project name is <b>basic-ntier-template</b>.</p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary" href="https://github.com/carloswm85/basic-ntier-template" target="_blank">
                            See the template repository &raquo;
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h3 class="h5 fw-semibold">Create Your Own Templates</h3>
                    <p>Learn how to package and distribute your own .NET project templates.</p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary" href="https://learn.microsoft.com/en-us/dotnet/core/tutorials/cli-templates-create-item-template" target="_blank">
                            Follow the official tutorial &raquo;
                        </a>
                    </div>
                    <div class="mt-1">
                        <a class="btn btn-outline-primary" href="https://youtu.be/rdWZo5PD9Ek" target="_blank">
                            Short 15m video tutorial &raquo;
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@using BasicNtierTemplate.Web.MVC.Models.ViewModels
@using BasicNtierTemplate.Web.MVC.Models.ViewModels.WeatherForecast

@model WeatherViewModel
@{
    ViewData["Title"] = "Weather Forecast";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">Weather Forecast</h1>

    <p>For testing purposes. Retrieve from API a list of <b>random</b> weather forecast data.</p>

    @if (Model?.WeatherList != null && Model.WeatherList.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.WeatherList[0].Date)</th>
                        <th>@Html.DisplayNameFor(m => m.WeatherList[0].TemperatureC)</th>
                        <th>@Html.DisplayNameFor(m => m.WeatherList[0].TemperatureF)</th>
                        <th>@Html.DisplayNameFor(m => m.WeatherList[0].Summary)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var weather in Model.WeatherList)
                    {
                        <tr>
                            <td>@weather.Date.ToShortDateString()</td>
                            <td>@($"{weather.TemperatureC}°C")</td>
                            <td>@($"{weather.TemperatureF}°F")</td>
                            <td>@weather.Summary</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No weather data available.
        </div>
    }
</div>
